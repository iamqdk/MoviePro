@model IEnumerable<MoviePro.Models.Magazine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Magazines</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    @{
        int page = 0;
        if (ViewBag.Count % 5 == 0)
        {
            page = ViewBag.Count / 5;
        }
        else
        {
            page = (ViewBag.Count / 5) + 1;

        }
    }
    @for (int i = 1; i <= page; i++)
    {
        @if (i == 1)
        {
            <a href="/Magazines/Index">@i</a>
        }
        else
        {
            <a href="/Magazines/IndexPage?page=@i">@i</a>
        }
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewsName)
            </td>
            <td>
                @item.Description.Substring(1, 30);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
